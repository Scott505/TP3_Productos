<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_listar">

    <fragment
        android:id="@+id/nav_listar"
        android:name="com.example.tp3_productos.ui.listar.ListarFragment"
        android:label="@string/menu_listar"
        tools:layout="@layout/fragment_listar" />

    <fragment
        android:id="@+id/nav_cargar"
        android:name="com.example.tp3_productos.ui.cargar.CargarFragment"
        android:label="@string/menu_cargar"
        tools:layout="@layout/fragment_cargar" />

    <fragment
        android:id="@+id/nav_salir"
        android:name="com.example.tp3_productos.ui.salir.SalirFragment"
        android:label="@string/menu_salir"
        tools:layout="@layout/fragment_salir" />
    <fragment
        android:id="@+id/nav_eliminar"
        android:name="com.example.tp3_productos.ui.eliminar.EliminarFragment"
        android:label="@string/menu_eliminar"
        tools:layout="@layout/fragment_eliminar" >
        <action
            android:id="@+id/action_nav_eliminar_to_confirmacionFragment"
            app:destination="@id/confirmacionFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmacionFragment"
        android:name="com.example.tp3_productos.ui.eliminar.ConfirmacionFragment"
        android:label="Detalle del Producto"
        tools:layout="@layout/fragment_confirmacion" >
        <action
            android:id="@+id/action_confirmacionFragment_to_nav_eliminar"
            app:destination="@id/nav_eliminar" />
    </fragment>
</navigation>